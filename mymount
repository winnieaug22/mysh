#!/bin/bash
source mycolor
echo -e "$yellow---board---$end"
echo "sshfs top: toptop"
echo "sshfs down: downdown"
echo "fusermount -u ~/toptop"
echo "fusermount -u ~/downdown"
echo "---nfs server---"
echo "id winnie => get [anonuid=1000][anongid=1000]"
echo "sudo vim /etc/exports"
echo "/home/winnie 140.96.28.101/24(rw,sync,no_subtree_check,all_squash,anonuid=1000,anongid=1000)"
echo "sudo exportfs -ra"
echo "================"
echo "---firewall---"
echo "sudo iptables -L -v -n"
echo "---nfs status---"
echo "sudo systemctl status nfs-kernel-server"
echo
echo "---auto: OFF---"
echo "- /etc/fstab"
echo "140.96.28.149:/home/winnie  /mnt/mynfs nfs  defaults  0  0"
echo "---manual: ON---"
echo -e "${yellow}sudo mount -t nfs 140.96.28.149:/home/winnie /mnt/mynfs${end}"
echo "mount |grep /mnt/mynfs"
echo "---unmount---"
echo "sudo umount /mnt/mynfs"
echo "sudo fuser -km /mnt/mynfs"
